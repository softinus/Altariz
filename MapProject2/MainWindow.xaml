            </Grid>
            
        </ScrollViewer>


        <!-- 카테고리 선택 부분-->
        <Image
            Name="btnCategory1"
            Source="Images/category/tour.png"
            Width="150" Height="100" 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Margin="10,10,0,0" TouchDown="onTouchCategory1">
        </Image>

        <Image
            Name="btnCategory2"
            Source="Images/category/rail.png"
            Width="150" Height="100" 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Margin="170,10,0,0" TouchDown="onTouchCategory2">
        </Image>

        <Image
            Name="btnCategory3"
            Source="Images/category/food.png"
            Width="150" Height="100" 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Margin="330,10,0,0" TouchDown="onTouchCategory3">
        </Image>


        <!-- 팝업 컨텐츠 ㅂ-->
        <Rectangle
            Opacity="0.5"
            Canvas.Left="0" Canvas.Top="0"
            Name="rct_fadeout"
            Fill="Black"
            TouchDown="onTouchFadeRect"
            Visibility="Hidden">            
        </Rectangle>


        <Image
            Name="popup_image_spot" 
            VerticalAlignment="Center" HorizontalAlignment="Center"
            Width="426" Height="756"
            Visibility="Hidden"/>


        <Image
            Name="popup_image_food" 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Width="500" Height="274"
            Visibility="Hidden"/>


        <TextBlock Name="tbTranslate" HorizontalAlignment="Left" Margin="0,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock Name="tbCompleted" HorizontalAlignment="Left" Margin="350,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>


    </Grid>


    


    <Window.Resources >

        <Storyboard x:Key="moveinit" Completed="StoryInitCompleted">
            <ThicknessAnimation
                Storyboard.TargetName="grid_images"
                Storyboard.TargetProperty="Margin"
                Duration="0:0:2" 
                To="-50,-1650,0,0">
                <ThicknessAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <!--<Storyboard x:Key="moveinit">
            <PointAnimation
                Storyboard.TargetProperty="Center"
                Storyboard.TargetName="imgMap"
                Duration="0:0:5" From="200,100" To="450,250">                
            </PointAnimation>
        </Storyboard>-->

        <Storyboard x:Key="fadein">
            <!--<DoubleAnimation Storyboard.TargetName="rct_fadeout"
                             BeginTime="0:0:5.0"
                             Storyboard.TargetProperty="Opacity"
                             From="0.0" To="1.0"
                             Duration="0:0:0.5"/>-->
            <ColorAnimation Storyboard.TargetName="rct_fadeout"
                            Storyboard.TargetProperty="Fill.Color"
                            To="#ff000000"
                            Duration="0:0:0.5" />
            <!--<ColorAnimation.EasingFunction>
                <ExponentialEase EasingMode="EaseOut"/>
            </ColorAnimation.EasingFunction>-->
        </Storyboard>

        <Storyboard x:Key="fadeout">
            <ColorAnimation Storyboard.TargetName="rct_fadeout"
                            Storyboard.TargetProperty="Fill.Color"
                            To="Transparent"
                            Duration="0:0:0.5" />
        </Storyboard>

        <Storyboard x:Key="show">
            <DoubleAnimation To="300" Duration="0:0:0.5"
                             Storyboard.TargetName="popup_image_spot"
                             Storyboard.TargetProperty="Width"
                             >
                <DoubleAnimation.EasingFunction>
                    <!--<ElasticEase Oscillations="2" EasingMode="EaseOut"/>-->
                    <ExponentialEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="hide" Completed="StoryHideCompleted">
            <DoubleAnimation To="0" Duration="0:0:0.5"
                             Storyboard.TargetName="popup_image_spot"
                             Storyboard.TargetProperty="Width"
                             >
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

        </Storyboard>
    </Window.Resources>


</Window>

    
    